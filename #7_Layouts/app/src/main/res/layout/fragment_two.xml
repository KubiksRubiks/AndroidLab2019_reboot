<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentTwo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDepartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:text="@string/depart_text"
                android:textColor="@color/custom_red"
                android:textSize="@dimen/title_textSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDepartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:paddingBottom="1dp"
                android:textColor="@color/custom_gray"
                android:textSize="@dimen/date_textSize"
                tools:text="16 SEP 2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDepartFreeSeatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:text="@string/free_seats_text"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/freeSeats_textSize" />

            <TextView
                android:id="@+id/tvDepartFreeSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/freeSeats_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/freeSeats_textSize"
                tools:text="3" />

            <TextView
                android:id="@+id/tvDepartCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:textColor="@color/custom_gray_dark"
                android:textSize="@dimen/cost_textSize"
                android:textStyle="bold"
                tools:text="435 BYN" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDepartPlaceFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/custom_green"
                android:textSize="@dimen/place_textSize"
                tools:text="MSQ" />

            <ImageView
                android:id="@+id/ivDepartPlane"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:layout_weight="0"
                android:contentDescription="@string/image_of_flight"
                android:rotation="90"
                app:srcCompat="@drawable/ic_flight_blue_24dp" />

            <TextView
                android:id="@+id/tvDepartPlaceTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/custom_green"
                android:textSize="@dimen/place_textSize"
                tools:text="FLO" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDepartDepartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textColor="@color/custom_gray"
                android:textSize="@dimen/time_textSize"
                tools:text="00:20" />

            <ImageView
                android:id="@+id/ivDepartFlightUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/time_margin"
                android:contentDescription="@string/image_of_flight_up"
                app:srcCompat="@drawable/ic_flight_takeoff_blue_24dp" />

            <ImageView
                android:id="@+id/tvDepartArrowToRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/arrow_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/image_of_arrow_right"
                app:srcCompat="@drawable/ic_trending_flat_gray_24dp" />

            <TextView
                android:id="@+id/tvDepartArriveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/arrow_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textColor="@color/custom_gray_dark"
                android:textSize="@dimen/time_textSize"
                tools:text="09:20" />

            <ImageView
                android:id="@+id/ivDepartFlightDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/time_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/image_of_flight_down"
                app:srcCompat="@drawable/ic_flight_land_blue_24dp" />

            <ImageView
                android:id="@+id/ivDepartClock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginEnd="@dimen/time_margin"
                android:layout_weight="1"
                android:contentDescription="@string/image_of_clock"
                android:scaleType="fitEnd"
                android:textColor="@color/custom_gray"
                android:textSize="@dimen/totalTime_textSize"
                app:srcCompat="@drawable/ic_schedule_black_24dp" />

            <TextView
                android:id="@+id/tvDepartTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/totalTime_textSize"
                tools:text="9:00" />
        </LinearLayout>

        <View
            android:id="@+id/vSeparator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/layout_line_margin"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_marginEnd="@dimen/layout_line_margin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:text="@string/return_text"
                android:textColor="@color/custom_blue"
                android:textSize="@dimen/title_textSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReturnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:paddingBottom="1dp"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/date_textSize"
                tools:text="17 SEP 2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReturnFreeSeatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:text="@string/free_seats_text"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/freeSeats_textSize" />

            <TextView
                android:id="@+id/tvReturnFreeSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/freeSeats_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/freeSeats_textSize"
                tools:text="5" />

            <TextView
                android:id="@+id/tvReturnCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:textColor="@color/custom_gray_dark"
                android:textSize="@dimen/cost_textSize"
                android:textStyle="bold"
                tools:text="488 BYN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReturnPlaceFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/custom_green"
                android:textSize="@dimen/place_textSize"
                tools:text="FLO" />

            <ImageView
                android:id="@+id/plane"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:layout_weight="0"
                android:contentDescription="@string/image_of_flight"
                android:rotation="90"
                app:srcCompat="@drawable/ic_flight_blue_24dp" />

            <TextView
                android:id="@+id/tvReturnPlaceTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/custom_green"
                android:textSize="@dimen/place_textSize"
                tools:text="MSQ" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReturnLeaveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textColor="@color/custom_gray"
                android:textSize="@dimen/time_textSize"
                tools:text="05:10" />

            <ImageView
                android:id="@+id/ivReturnFlightUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/image_of_flight_up"
                app:srcCompat="@drawable/ic_flight_takeoff_blue_24dp" />

            <ImageView
                android:id="@+id/tvReturnArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/arrow_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/image_of_arrow_right"
                app:srcCompat="@drawable/ic_trending_flat_gray_24dp" />

            <TextView
                android:id="@+id/tvReturnArriveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/arrow_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textColor="@color/custom_gray"
                android:textSize="@dimen/time_textSize"
                tools:text="09:20" />

            <ImageView
                android:id="@+id/ivReturnFlightDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/time_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/image_of_flight_down"
                app:srcCompat="@drawable/ic_flight_land_blue_24dp" />

            <ImageView
                android:id="@+id/ivReturnClock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginEnd="@dimen/time_margin"
                android:layout_weight="1"
                android:contentDescription="@string/image_of_clock"
                android:scaleType="fitEnd"
                android:textSize="@dimen/totalTime_textSize"
                app:srcCompat="@drawable/ic_schedule_black_24dp" />

            <TextView
                android:id="@+id/tvReturnTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginEnd="@dimen/layout_marginEnd"
                android:textColor="@color/custom_gray_darker"
                android:textSize="@dimen/totalTime_textSize"
                tools:text="4:00" />
        </LinearLayout>

        <View
            android:id="@+id/vSeparator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/layout_line_margin"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_marginEnd="@dimen/layout_line_margin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_check_circle_green_24dp" />

    </LinearLayout>

</LinearLayout>